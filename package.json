    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.17",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.3.0",
    "nodemon": "^3.1.0",
    "tsx": "^3.12.2"
  }
